{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{% include "filters.twig" %}
		<video id="background-video" autoplay loop muted poster="{{site.theme.link ~ '/dist/animated-bg-placeholder.jpg'}}">
			<source src="{{ animated_bg ?? site.theme.link ~ '/dist/animated-bg.mp4'}}" type="video/mp4">
		</video>
   
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				{% include "main-menu.twig" %}
			{% endblock %}
		</header>

		<main id="content" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
